import java.awt.*;
import javax.swing.*;
import java.awt.event.*;

public class CharacterSelectMenu
{
    JPanel mainPanel = new JPanel(new GridLayout(1,2));
    JPanel p1Panel = new JPanel(new GridLayout(2,1));
    JPanel p2Panel = new JPanel(new GridLayout(2,1));
    JPanel p1PicturePanel = new JPanel(new BorderLayout());
    JLabel p1Label = new JLabel("Player 1");
    JPanel p2PicturePanel = new JPanel(new BorderLayout());
    JLabel p2Label = new JLabel("Player 2");
    JPanel p1SelectPanel = new JPanel(new GridLayout(3,1));
    JPanel p2SelectPanel = new JPanel(new GridLayout(3,1));
    JButton p1Luke = new JButton("Luke");
    JButton p2Luke = new JButton("Luke");
    JButton p1Vader = new JButton("Vader");
    JButton p2Vader = new JButton("Vader");
    JButton p1Yoda = new JButton("Yoda");
    JButton p2Yoda = new JButton("Yoda");
    JButton p1Palpatine = new JButton("Palpatine");
    JButton p2Palpatine = new JButton("Palpatine");
    JPanel p1CharacterPanel1 = new JPanel(new GridLayout(1,2));
    JPanel p1CharacterPanel2 = new JPanel(new GridLayout(1,2));
    JPanel p2CharacterPanel1 = new JPanel(new GridLayout(1,2));
    JPanel p2CharacterPanel2 = new JPanel(new GridLayout(1,2));
    JCheckBox p1Ready = new JCheckBox("READY?");
    JCheckBox p2Ready = new JCheckBox("READY?");
    
    int p1Character;
    int p2Character;
    
    public CharacterSelectMenu(JFrame frame)
    {
        frame.add(mainPanel);
        mainPanel.add(p1Panel);
        mainPanel.add(p2Panel);
        p1Panel.add(p1PicturePanel);
        p1PicturePanel.add(p1Label, BorderLayout.NORTH);
        p2Panel.add(p2PicturePanel);
        p2PicturePanel.add(p2Label, BorderLayout.NORTH);
        p1Panel.add(p1SelectPanel);
        p2Panel.add(p2SelectPanel);
        p1SelectPanel.add(p1CharacterPanel1);
        p1CharacterPanel1.add(p1Luke);
        p1CharacterPanel1.add(p1Vader);
        p1SelectPanel.add(p1CharacterPanel2);
        p1CharacterPanel2.add(p1Yoda);
        p1CharacterPanel2.add(p1Palpatine);
        p2SelectPanel.add(p2CharacterPanel1);
        p2CharacterPanel1.add(p2Luke);
        p2CharacterPanel1.add(p2Vader);
        p2SelectPanel.add(p2CharacterPanel2);
        p2CharacterPanel2.add(p2Yoda);
        p2CharacterPanel2.add(p2Palpatine);
        p1SelectPanel.add(p1Ready);
        p2SelectPanel.add(p2Ready);
        
        class Luke1Listener implements ActionListener
        {
            public void actionPerformed(ActionEvent e)
            {
                p1Character = 0;
                frame.repaint();
            }
        }
        class Vader1Listener implements ActionListener
        {
            public void actionPerformed(ActionEvent e)
            {
                p1Character = 1;
                frame.repaint();
            }
        }
        class Yoda1Listener implements ActionListener
        {
            public void actionPerformed(ActionEvent e)
            {
                p1Character = 2;
                frame.repaint();
            }
        }
        class Palpatine1Listener implements ActionListener
        {
            public void actionPerformed(ActionEvent e)
            {
                p1Character = 3;
                frame.repaint();
            }
        }
        class Luke2Listener implements ActionListener
        {
            public void actionPerformed(ActionEvent e)
            {
                p2Character = 0;
                frame.repaint();
            }
        }
        class Vader2Listener implements ActionListener
        {
            public void actionPerformed(ActionEvent e)
            {
                p2Character = 1;
                frame.repaint();
            }
        }
        class Yoda2Listener implements ActionListener
        {
            public void actionPerformed(ActionEvent e)
            {
                p2Character = 2;
                frame.repaint();
            }
        }
        class Palpatine2Listener implements ActionListener
        {
            public void actionPerformed(ActionEvent e)
            {
                p2Character = 3;
                frame.repaint();
            }
        }
        p1Luke.addActionListener(Luke1Listener);
        p1Vader.addActionListener(Vader1Listener);
        p1Yoda.addActionListener(Yoda1Listener);
        p1Palpatine.addActionListener(Palpatine1Listener);
        p2Luke.addActionListener(Luke2Listener);
        p2Vader.addActionListener(Vader2Listener);
        p2Yoda.addActionListener(Yoda2Listener);
        p2Palpatine.addActionListener(Palpatine2Listener);
        
        class ReadyListener implements ActionListener
        {
            public void actionPerformed(ActionEvent e)
            {
                if(p1Ready.isSelected() && p2Ready.isSelected())
                {
                    frame.removeAll();
                    BattleUI battle = new BattleUI(frame, p1Character, p2Character);
                }
            }
        }
    
    }
    
    
}
