public class BattleUI
{
    Character player1;
    Character player2;
    public BattleUI(int p1, int p2)
    {
        switch (p1)
        {
            case 0://player1 = new 
            break;
            case 1://player1 = new
            break;
            case 2://player1 = new
            break;
            case 3://player1 = new
        }
        switch (p2)
        {
            case 0://player2 = new
            break;
            case 1://player2 = new
            break;
            case 2://player2 = new
            break;
            case 3://player2 = new
            break;
        }  
        class ColorListener implements KeyListener
        {
            public void keyPressed(KeyEvent e)
            {
                switch(e.getKeyCode())
                {
                    case KeyEvent.VK_Q: rC.increaseR(); break;
                    case KeyEvent.VK_A: rC.decreaseR(); break;
                    case KeyEvent.VK_W: rC.increaseG(); break;
                    case KeyEvent.VK_S: rC.decreaseG(); break;
                    case KeyEvent.VK_E: rC.increaseB(); break;
                    case KeyEvent.VK_D: rC.decreaseB(); break;
                }
            }

            public void keyReleased(KeyEvent e){}

            public void keyTyped(KeyEvent e){}   
        }
    }

}
